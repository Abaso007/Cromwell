{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "es2015", "es2016", "es2017", "es2018"],
    "baseUrl": ".",
    "jsx": "react",
    "outDir": "build",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "paths": {
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@helpers/*": ["./src/helpers/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".cromwell",
    "build",
    "./built/**/*",
    "./.cromwell/**/*",
    "./node_modules/**/*",
    "src/helpers/compiler.js"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
